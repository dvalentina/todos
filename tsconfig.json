{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    "typeRoots": ["./node_modules/@types", "src/types"],
    "moduleResolution": "node",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build/**/*"]
}
